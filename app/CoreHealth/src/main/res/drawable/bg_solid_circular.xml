<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
            <item android:bottom="2dp" android:top="40dp" android:right="0dp" android:left="0dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#44000000"
                        android:endColor="#00000000"
                        android:gradientRadius="10dp"
                        android:type="radial"
                        />
                </shape>
            </item>
            <item android:top="0dp" android:left="4dp" android:right="4dp" android:bottom="15dp">
                <shape android:shape="oval">
                    <size android:width="55dp"
                        android:height="55dp"/>
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" >
        <layer-list>
            <item android:bottom="2dp" android:top="40dp" android:right="0dp" android:left="0dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#44000000"
                        android:endColor="#00000000"
                        android:gradientRadius="10dp"
                        android:type="radial"
                        />
                </shape>
            </item>
            <item android:top="0dp" android:left="4dp" android:right="4dp" android:bottom="15dp">
                <shape android:shape="oval">
                    <size android:width="55dp"
                        android:height="55dp"/>
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" >
        <layer-list>
            <item android:bottom="2dp" android:top="40dp" android:right="0dp" android:left="0dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#44000000"
                        android:endColor="#00000000"
                        android:gradientRadius="10dp"
                        android:type="radial"
                        />
                </shape>
            </item>
            <item android:top="0dp" android:left="4dp" android:right="4dp" android:bottom="15dp">
                <shape android:shape="oval">
                    <size android:width="55dp"
                        android:height="55dp"/>
                    <solid android:color="@color/colorPrimaryFaded" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:bottom="2dp" android:top="40dp" android:right="0dp" android:left="0dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#44000000"
                        android:endColor="#00000000"
                        android:gradientRadius="10dp"
                        android:type="radial"
                        />
                </shape>
            </item>
            <item android:top="0dp" android:left="4dp" android:right="4dp" android:bottom="15dp">
                <shape android:shape="oval">
                    <size android:width="55dp"
                        android:height="55dp"/>
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
